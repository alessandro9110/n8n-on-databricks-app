# Esempio variabili ambiente per n8n (rinomina in .env per uso locale)
# Node richiesto: >=20.19 <25

# Abilita autenticazione Basic
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=cambia_questa_password

# Chiave di cifratura dati (genera una stringa lunga e casuale)
N8N_ENCRYPTION_KEY=GENERARE_UNA_CHIAVE_LUNGA_RANDOM

# Timezone
GENERIC_TIMEZONE=Europe/Rome

# Tipo database (sqlite per test rapidi)
DB_TYPE=sqlite
# Per Postgres o MySQL aggiungere anche:
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=supersegreta

# Imposta la porta (default 5678). Cambiala se conflitti.
# N8N_PORT=5678

# Disabilita telemetria se desiderato
# N8N_DISABLE_TELEMETRY=true
